@*<script src="~/Scripts/jquery-3.6.0.js"></script>*@
<script src="~/Scripts/Employee.js"></script>
<div class="card">
    <h2 class="card-header" style="background-color: #435d7d; color:white;  width:auto">
        Manage Employees
        <button type="button"  style="float:right" class="btn btn-success"
                data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">
            <i class="fa fa-plus-circle" aria-hidden="true"></i>  Add New Employee
        </button>
    </h2>
    <div class="card-body">
        <div class="container">

            <table class="table table-striped   table-hover">
                <thead>
                    <tr style="border-top:inset">
                        <th>
                            No
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Phone
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody class="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade    modal-sm" id="myModal" tabindex="-1" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form  class="row">
                    <div class="mb-3" hidden>
                        <label for="EmployeeId">ID</label>
                        <input type="text" class="form-control" id="EmployeeID" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="mb-3">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" />
                    </div>
                    <div class="mb-3">
                        <label for="Email">Email</label>
                        <input type="text" class="form-control" id="Email" />
                    </div>
                    <div class="mb-3">
                        <label for="State">Address</label>
                        <textarea  rows="2" type="text" class="form-control" id="Address"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="Phone">Phone</label>
                        <input type="text" class="form-control" id="Phone"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light"  >
                <button type="button" class="btn btn-default" onclick="closemodel();" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Add</button>
            </div>
        </div>
    </div>
   
</div>

<div class="modal fade    modal-sm" id="myModal1" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete these Records?
                <p  style="color:  gold">This  action cannot  be undone.</p>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-default" onclick="closemodel();" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="btndelete">Delete</button>
            </div>
        </div>
    </div>

    

</div>
<div class="m-4">
    <div class="toast" id="Toast_delete">
        <div class="toast-header">
            <strong class="me-auto"><i class="fa fa-bell"></i> Thông báo!</strong>
            <small>Vừa xong</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Xóa thành công!
        </div>
    </div>
</div>

<div class="m-4">
    <div class="toast" id="Toast_create">
        <div class="toast-header">
            <strong class="me-auto"><i class="fa fa-bell"></i> Thông báo!</strong>
            <small>Vừa xong</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Thêm mới thành công!
        </div>
    </div>
</div>

<style>
    /* Style for positioning toast */
    .toast {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>